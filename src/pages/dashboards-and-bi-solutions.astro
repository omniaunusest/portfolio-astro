---
import { type Project } from "../types/types";
import Header from "@compontents/Header.astro";
import ProjectComponent from "../components/ProjectComponent.astro";
import Sidebar from "../components/Sidebar.astro";
import { softwareDev } from '../data/projects';
---

<!DOCTYPE html>
<html
>
  <Header title="DevOps | Sam Bernstein" />
  <body>
    <div class="content">
        <Sidebar selectedItem="dashboards-and-bi-solutions" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div></a
            >
          </div>
          <div class="content-container">
            <h1>Dashboards and BI solutions</h1>
            <section class="items-container">
                <div class="resouce-items">
                    {softwareDev.map((e:Project) => (
                      <ProjectComponent 
                        title={e.projectTitle} 
                        desc={e.desc}
                        tech={e.tech}
                      />
                    ))}
                  </div>
            </section>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
